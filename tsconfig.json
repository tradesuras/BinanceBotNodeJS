{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "allowJs": true,
        "checkJs": false
      },
      "include": [
        "src/**/*"
        //"src/core/**/*.ts"
      ],
      "exclude": [
        "node_modules",
        "build",
        "dist"
      ],
      "lib": ["es2015"]
}